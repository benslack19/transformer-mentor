# .zshrc-template

# Path to your oh-my-zsh installation.
export ZSH="${HOME}/.oh-my-zsh"

# Set name of the theme to load --- learn more in https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="agnoster" # A popular powerline-style theme, requires a powerline-compatible font (VS Code handles this well)

# Example of plugins you can use.
# Add all plugins you want to use here.
# Common and useful ones: git, zsh-autosuggestions, zsh-syntax-highlighting, colored-man-pages, common-aliases
plugins=(
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
  colored-man-pages
  common-aliases
  # Add more as you explore:
  # docker
  # python
  # pip
  # ...
)

source $ZSH/oh-my-zsh.sh

