# --- Custom Aliases & Functions ---
# Example aliases
alias ll='ls -alF'
alias cls='clear'
alias gcl='git clone'
alias gst='git status'
alias gp='git pull'
alias gd='git diff'

# Python specific aliases
alias py="python"
alias pa="pip install -e .[dev]" # Alias for your project setup

# Roo Code specific aliases
alias r='roo'

# Adjustments for Ruff (if needed, though pre-commit usually handles this)
